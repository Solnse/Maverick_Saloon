= form_for @food_item do |f|
  -if @food_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@food_item.errors.count, "error")} prohibited this food_item from being saved:"
      %ul
        - @food_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description, rows: 6
  .field
    = f.label :img_url
    = f.text_field :img_url
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :category
    = f.text_field :category
  .actions
    = f.submit 'Save'