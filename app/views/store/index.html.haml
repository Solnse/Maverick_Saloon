- if notice
  %p#notice= notice
- @products.each do |product|
  .entry
    = image_tag(product.image_url)
    %h3= product.title
    .desc
      = sanitize(product.description)
    .price-line
      %span.price= number_to_currency(product.price)
      = button_to t('.add_html'), line_items_path(product_id: product), remote: true